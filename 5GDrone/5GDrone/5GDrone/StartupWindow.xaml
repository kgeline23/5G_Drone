<Window x:Class="_5GDrone.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5GDrone"
        mc:Ignorable="d"        
        Title="Start up" Height="600" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <Grid Background="#FF1E1E1E">
        <StackPanel x:Name="stk_Start" Width="400" Height="300" VerticalAlignment="Center">
            <Label Content="Start up the Drone" FontSize="16" Foreground="White" HorizontalContentAlignment="Center" Margin="5,5,5,5"></Label>
            <Button x:Name="btn_Start" Content="Start" FontSize="14" Margin="5,10,5,10" Foreground="White" Background="#FF2D2D2F" BorderBrush="#FF2D2D30" Width="200" Height="50" Click="btn_start_Click"></Button>
        </StackPanel>
    </Grid>
    
</Window>
